<%- include ('../../partials/header') %>
<%- include ('../../partials/home-navbar') %>

<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(articles =>{ %>
           <div class="card">
            <div class="card-header">
                <h2><%= articles.title %></h2>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%= articles.slug %>">Read</a>
            </div>
        </div>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) {%>
                    <a style="float: left;" href="/articles/page/<%= result.page -1 %>"><<< Previous</a>
                <% } else if(result.page == 2) {%>
                    <a style="float: left;" href="/"><<< Previous</a>
                <% } %>
                <% if(result.next) {%>
                    <a style="float: right;" href="/articles/page/<%= result.page +1 %>">Next >>></a>
                <% } %>
            </div>
            <hr>   
        </div>
    </div>
</body>

<%- include ('../../partials/footer') %>